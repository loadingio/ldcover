.ldcv.lg > .base
  width: 960px
  height: 700px

.ldcv.md > .base
  width: 720px
  height: 500px

.ldcv.full > .base
  border: none
  border-radius: 0
  width: 100%
  height: 100%
  max-width: 100%
  max-height: 100%
  & > .inner
    border-radius: 0

.ldcv.mini, .ldcv.inline
  width: auto
  height: auto
  left: auto
  top: auto
  right: auto
  bottom: auto
  &:before, &:after
    display: none
  & > .base
    max-width: initial
    max-height: initial
    & > .inner
      width: initial
      height: initial

.ldcv.mini.left
  left: 1.25em
.ldcv.mini.right
  right: 1.25em
.ldcv.mini.top
  top: 1.25em
.ldcv.mini.bottom
  bottom: 1.25em

.ldcv.inline
  position: relative
  & > .base
    position: absolute
    top: 0
    left: 0
